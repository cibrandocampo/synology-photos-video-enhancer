# Media Configuration
# MEDIA_HOST_PATH: Path on host machine that will be mounted in Docker (for docker-compose)
# MEDIA_APP_PATH: Path inside Docker container where media is mounted (default: /media)
MEDIA_HOST_PATH=/path/on/host/to/media
MEDIA_APP_PATH=/media

# Transcoding Resources
HW_TRANSCODING=True
EXECUTION_THREADS=2

# Output Video Settings
VIDEO_CODEC=h264
VIDEO_BITRATE=2048
VIDEO_RESOLUTION=720p
VIDEO_PROFILE=high

# Audio Configuration
AUDIO_CODEC=aac
AUDIO_BITRATE=128
AUDIO_CHANNELS=2
# Only for AAC
AUDIO_PROFILE=aac_lc

# Database Configuration
# DATABASE_HOST_PATH: Path on host machine for database directory (for docker-compose)
# DATABASE_APP_PATH: Path inside Docker container where database is stored (default: data/transcodings.db)
DATABASE_HOST_PATH=./data
DATABASE_APP_PATH=data/transcodings.db

# Logger Configuration
LOGGER_NAME=synology-photos-video-enhancer
LOGGER_LEVEL=INFO
