# ============================================
# DOCKER CONFIGURATION
# ============================================
# Docker image version for the main APP container (synology-photos-video-enhancer)
# Options: stable, latest, or a specific tag
# Recommended: Use 'stable' as it will be updated with new releases
# Note: 'latest' will have daily updates from main/master branch
APP_DOCKER_VERSION=stable

# ============================================
# TRANSCODING RESOURCES
# ============================================
# Enable hardware transcoding (True/False)
# Hardware acceleration: VAAPI/QSV for amd64, V4L2M2M for arm64
# Falls back to software encoding if hardware is unavailable
HW_TRANSCODING=True

# Number of threads for FFmpeg transcoding
# Recommended: Do not exceed half of available CPU cores
# Example: If CPU has 4 cores, do not use more than 2 threads
EXECUTION_THREADS=2

# Minutes to wait before first execution after container startup
STARTUP_DELAY=30

# Minutes between periodic executions
EXECUTION_INTERVAL=240

# ============================================
# OUTPUT VIDEO SETTINGS
# ============================================
# Video codec: h264, hevc, mpeg4, mpeg2video, vp8, vp9, av1
VIDEO_CODEC=h264

# Video bitrate in kbps
VIDEO_BITRATE=2048

# Video resolution: 144p, 240p, 360p, 480p, 720p, 1080p, 1440p, 2160p
# If not set, VIDEO_W and VIDEO_H can be used as fallback (for custom resolutions)
VIDEO_RESOLUTION=720p

# Video profile (codec-specific):
#   H.264: baseline, main, high
#   HEVC: main, main10
#   MPEG2VIDEO: simple, main, high
#   MPEG4: simple, advanced-simple
# If the codec doesn't support profiles (e.g., vp8, vp9, av1), this field is ignored
# If not set, uses default profile for the selected codec
# Recommended: Set to False or None (or leave empty) if codec doesn't support profiles
VIDEO_PROFILE=high

# ============================================
# OUTPUT AUDIO SETTINGS
# ============================================
# Audio codec: aac, mp3, ac3, eac3, opus, vorbis, flac
AUDIO_CODEC=aac

# Audio bitrate in kbps
AUDIO_BITRATE=128

# Number of audio channels: 1=mono, 2=stereo
AUDIO_CHANNELS=2

# AAC profile: aac_lc, aac_he, aac_he_v2 (only for AAC codec)
# If not using AAC codec, this field is ignored
# If not set, uses default profile for AAC codec
# Recommended: Set to False or None (or leave empty) if not using AAC codec
AUDIO_PROFILE=aac_lc

# ============================================
# LOGGER CONFIGURATION
# ============================================
# Logger name (used in log messages)
LOGGER_NAME=video-enhancer

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOGGER_LEVEL=INFO

# ============================================
# DATABASE CONFIGURATION
# ============================================
# Path where you want the system database to be stored on your NAS server
DATABASE_HOST_PATH=/volume1/docker/photo/photo-video-enhancer/volumes/database

# ============================================
# GRAFANA CONFIGURATION (OPTIONAL)
# ============================================
# These variables are only needed if you want to use Grafana for monitoring
# Uncomment and configure these variables if you want to use Grafana for monitoring
# Grafana Docker image version to use
GRAFANA_DOCKER_VERSION=12.3

# Port where Grafana will be accessible
GRAFANA_PORT=3000

# Grafana admin username
GRAFANA_USER=admin

# Grafana admin password
GRAFANA_PASSWORD=admin

# Path where Grafana persistent data will be stored on your NAS server
GRAFANA_PERSISTENCE_PATH=/volume1/docker/photo/photo-video-enhancer/volumes/grafana


# ============================================
# ADVANCED / DEVELOPMENT CONFIGURATION
# ============================================
# WARNING: These variables should NOT be modified for normal operation.
# Only modify them for debugging purposes or very specific use cases.
# The default values work for most installations and should be left unchanged.

# Internal container path where media folders are mounted
# This is the path INSIDE the container. The application automatically scans
# all subdirectories under this path.

MEDIA_APP_PATH=/media

# Path INSIDE the container where the database file is stored
# Can be a directory (ending with /) or full path to the database file
# If directory, 'transcodings.db' will be appended automatically
DATABASE_APP_PATH=/app/data

# ============================================
